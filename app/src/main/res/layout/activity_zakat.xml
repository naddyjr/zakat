                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/biko_regular_400"
                                                android:text="Lacagta Ganacsiga"
                                                android:textColor="@color/green" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
