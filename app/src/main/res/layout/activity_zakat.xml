                                                    android:id="@+id/tvTotalZakat"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/biko_bold_700"
                                                    android:text="00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <TextView
                                                    android:layout_width="wrap_content"
