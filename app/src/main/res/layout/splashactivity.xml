<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:gravity="bottom|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_weight="0.20">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <ImageView
            android:layout_width="387dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/zakad" />
    </androidx.cardview.widget.CardView>
</LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.42">

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:maxHeight="8dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animation"
            app:lottie_loop="true"/>
        <TextView
            android:textSize="17dp"
            android:textColor="#D27525"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kusoo dhawaaw"
            android:fontFamily="@font/biko_regular_400" />

        <TextView
            android:textSize="22dp"
            android:textColor="#892B2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Iska xisaabi Sakada"
            android:fontFamily="@font/kingthings_exeter" />

        <TextView
            android:textSize="30dp"
            android:textColor="#409C60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Made by Somnest"
            android:fontFamily="@font/kingthings_exeter" />
    </LinearLayout>
</LinearLayout>
